#:import utils kivy.utils

<MainGrid>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#111316')
        Rectangle:
            pos: self.pos
            size: self.size
    math_function: math_box

    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        padding: 10, 10, 0, 10

        ScrollView:
            id: view
            do_scroll_x: True
            do_scroll_y: False
            orientation: 'vertical'
            size_hint: 1, 0.5
            valign: 'middle'
            bar_width: 4
            bar_color: 1, 1, 1, 1
            bar_inactive_color: 1, 1, 1, 0.5
            scroll_type: ['content']

            BoxLayout:
                orientation: 'vertical'
                size_hint: None, 1
                width: 990
                BoxLayout:
                    id: modulation
                    size_hint_x: 1
                    size_hint_y: 1

        BoxLayout:
            id: text_function
            orientation: 'horizontal'
            size_hint: 1, 0.1
            padding: 10

            TextInput:
                id: math_box
                font_size: (root.width**2 + root.height**2) / 14**4

            Button:
                text: 'Update function'
                size_hint_x: None
                width: 250
                on_release: root.update_function(root.math_function.text)

        BoxLayout:
            size_hint: 1, 0.1
            orientation: 'vertical'

            Label:
                text: 'Set min x: ' + str(x_min.value) + " (+- 1)"

            Slider:
                id: x_min
                min: -20
                max: -1
                step: 1
                on_value: root.update_x_min(x_min.value)

        BoxLayout:
            size_hint: 1, 0.1
            orientation: "vertical"

            Label:
                text: "Set max x: " + str(x_max.value) + " (+- 1)"

            Slider:
                id: x_max
                min: 1
                max: 20
                step: 1
                on_value: root.update_x_max(x_max.value)

        BoxLayout:
            size_hint: 1, 0.1
            orientation: "vertical"

            Label:
                text: "Set step for x: " + str(step_x.value) + " (+- 0.1)"

            Slider:
                id: step_x
                min: 0.1
                max: 1
                step: 0.1
                on_value: root.update_step_x(step_x.value)

        BoxLayout:
            size_hint: 1, 0.1
            orientation: "vertical"

            Button:
                text: 'Show function analysis'
                size_hint_x: None
                valign: 'middle'
                width: 250
                on_release: root.show_analysis()
